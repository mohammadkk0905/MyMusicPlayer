<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginHorizontal="@dimen/spacing_small"
    android:layout_marginTop="@dimen/spacing_small"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="@dimen/spacing_small"
    app:rippleColor="?android:attr/colorControlHighlight">
    
    <TextView
        android:id="@+id/tvSortItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/spacing_tiny"
        android:text="@string/album"
        android:textAppearance="@style/TextAppearance.Audio.BodyMedium" />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSortItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/spacing_tiny"
        android:padding="@dimen/spacing_tiny"
        android:rotation="0"
        android:scaleType="center"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_north"
        app:tint="?android:attr/colorControlNormal" />
</com.google.android.material.card.MaterialCardView>